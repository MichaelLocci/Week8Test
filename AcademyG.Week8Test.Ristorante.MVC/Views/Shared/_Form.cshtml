@model PlateViewModel

<input asp-for="Id" hidden />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="col">
    <div class="flex-md-grow-1">
        <div class="card">
            <div class="card-body">
                <label asp-for="NamePlate"></label>
                <input asp-for="NamePlate" class="form-control" placeholder="Insert a name plate" />
                <span asp-validation-for="NamePlate" class="text-danger"></span>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Insert an description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <label asp-for="Price"></label>
                <div class="input-group">
                    <input asp-for="Price" class="form-control" placeholder="Insert price">
                    <div class="input-group-append">
                        <span class="input-group-text">€</span>
                        <span class="input-group-text">00.00</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="TypePlate" class="control-label"></label>
                    <select asp-for="TypePlate" asp-items="@ViewBag.TypePlate" class="form-control">
                        <option value="">Please select a value...</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <label asp-for="MenuId"></label>
                <div class="input-group">
                    <input asp-for="MenuId" class="form-control" />
                    <span asp-validation-for="MenuId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>